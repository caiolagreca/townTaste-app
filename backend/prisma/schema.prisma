generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @default(uuid())
  firstName            String
  lastName             String
  age                  Int
  email                String    @unique @db.VarChar(100)
  password             String
  resetPasswordToken   String? // field for the reset token
  resetPasswordExpires DateTime? // field for the token expiration time
  role                 Role      @default(CUSTOMER)
  phoneNumber          String    @unique
  profilePhoto         String?
  address              String?
  //favoriteRestaurants []
  //favoriteFoods []
  //reservedSpots []
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@index([email])
  @@map("users")
}

enum Role {
  CUSTOMER
  RESTAURANT
  ADMIN
}
